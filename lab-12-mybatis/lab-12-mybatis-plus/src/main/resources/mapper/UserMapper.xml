<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.janson.springboot.lab12.myabtis.mapper.UserMapper">
    <sql id="FIELDS">
        id,username,`password`,create_time
    </sql>

    <select id="selectByIds" resultType="com.janson.springboot.lab12.myabtis.dataobject.UserDO">
        SELECT
        <include refid="FIELDS"/>
        FROM users
        WHERE id IN
        <foreach collection="ids" item="id" separator="," open="(" close=")" index="">
            #{id}
        </foreach>
    </select>

</mapper>